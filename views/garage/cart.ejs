<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mongoose garage</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/cart.css" />
</head>

<body>

    <div class = "header">
        <a class = "head1" href = "/garage/new">New Item</a>
        <a class = "head2" href ="/garage">All Items</a>
        <a class = "head3" href ="/garage/cart">Cart</a>
    </div>

    <nav class = "nav">
        <% if (user) { %>
          <a href="/logout">Log out</a>
        <% } else { %>
          <a href="/auth/google" class="login">Log in&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"style="width: 60px;"/>
        <% } %>
    </nav>
<% cart.items.forEach(function(i){ %>
    <div class = "grid-container">
        <div class = "grid-item">
            <p><%= i.name %></p>
            <p><%= i.price %></p>
            <p><%= i.description %></p>
            <p><%= i.userName %></p>
            <img src="<%= i.userAvatar %>">
    
        </div>

    </div>
    


<% }) %>






<form action="/garage/cart" method="POST">
    <input type="submit" value="Remove All">
</form>

<form action="/garage/cart?_method=DELETE" method="POST">
    <button type="submit">Purchase All!</button> 
    <!-- Needs OAuth -->
</form>





</div>
    
<%- include('../partials/footer')%>
